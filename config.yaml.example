assets: [BTC, ETH, SOL]

exchanges:
  hyperliquid:
    base_url: https://api.hyperliquid.xyz
    poll_interval_s: 5
  polymarket:
    base_url: https://gamma-api.polymarket.com
    poll_interval_s: 600

database:
  # Override with TRADING_DATABASE_URL env var in production
  url: postgresql://trading:trading@localhost:5432/trading

strategies:
  contrarian_pure:
    enabled: true
    params:
      threshold: 0.72
      min_days_to_close: 7
  contrarian_strength:
    enabled: true
    params:
      threshold: 0.80
      min_days_to_close: 7
  funding_rate:
    enabled: true
    params:
      threshold: 0.0012
  funding_oi:
    enabled: true
    params:
      funding_threshold: 0.0015
      oi_pct: 85
  rsi_mean_reversion:
    enabled: true
    params:
      period: 14
      overbought: 75
      oversold: 25
  funding_arb:
    enabled: true
    params:
      threshold: 0.0005
  momentum_breakout:
    enabled: true
    params:
      bb_period: 20
      bb_std: 2
      volume_mult: 1.5

logging:
  level: INFO
  # "json" for production, "console" for development
  format: json

paper:
  initial_capital: 10000
  risk_pct: 0.02
  default_stop_loss_pct: 0.02
  default_take_profit_pct: 0.04
  default_timeout_minutes: 60
  # Risk controls
  max_positions_per_strategy: 3
  max_total_exposure_pct: 0.50
  max_daily_loss_per_strategy: 500.0   # 5% of default $10k
  cooldown_after_loss_minutes: 5
  # Kelly criterion (off by default â€” enable to reduce size on low-confidence signals)
  kelly_enabled: true
  kelly_safety_factor: 0.5
  # Price oracle (real-time HL WebSocket + PM DB fallback)
  price_oracle_enabled: true
  price_oracle_staleness_s: 30.0        # HL cache expiry
  price_oracle_pm_staleness_s: 600.0    # PM cache expiry (10 min)
  # Slippage and fees
  slippage_pct:
    hyperliquid: 0.0005   # 0.05% slippage
    polymarket: 0.005     # 0.5% slippage (less liquid)
  fee_pct:
    hyperliquid: 0.0005   # 0.05% taker fee
    polymarket: 0.002     # 0.2% average fee
